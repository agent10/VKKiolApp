<?xml version="1.0" encoding="utf-8"?>
<kiol.vkapp.commonui.DragToDismissFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dismissLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/imageViewerBackgroundColor">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ImageViewerToolBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_back"
        app:title="@string/photoTitle" />
</kiol.vkapp.commonui.DragToDismissFrameLayout>