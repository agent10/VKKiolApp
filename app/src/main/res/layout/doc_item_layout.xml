<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DocItemStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/docImageIv"
        style="@style/DocItemImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/docTitleTv"
        style="@style/DocItemDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/DocListItemTitleTextAppearence"
        app:layout_constraintBottom_toTopOf="@id/docInfoTv"
        app:layout_constraintEnd_toStartOf="@id/docMenuBtn"
        app:layout_constraintStart_toEndOf="@id/docImageIv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/docInfoTv"
        style="@style/DocItemDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/DocListItemSubtitleTextAppearence"
        app:layout_constraintBottom_toTopOf="@id/docTagsTv"
        app:layout_constraintEnd_toStartOf="@id/docMenuBtn"
        app:layout_constraintStart_toEndOf="@id/docImageIv"
        app:layout_constraintTop_toBottomOf="@id/docTitleTv" />

    <TextView
        android:id="@+id/docTagsTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/DocListItemSubtitleTextAppearence"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/docMenuBtn"
        app:layout_constraintStart_toEndOf="@id/docTagsImg"
        app:layout_constraintTop_toBottomOf="@id/docInfoTv" />

    <ImageView
        android:id="@+id/docTagsImg"
        style="@style/DocItemTagImage"
        app:layout_constraintBottom_toBottomOf="@id/docTagsTv"
        app:layout_constraintStart_toEndOf="@id/docImageIv"
        app:layout_constraintTop_toTopOf="@id/docTagsTv" />

    <ImageButton
        android:id="@+id/docMenuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_doc_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>