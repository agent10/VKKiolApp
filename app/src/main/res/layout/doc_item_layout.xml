<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="16dp"
    android:paddingTop="6dp"
    android:paddingEnd="16dp"
    android:paddingBottom="6dp">

    <ImageView
        android:id="@+id/docImageIv"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/docTitleTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@style/DocListItemTitleTextAppearence"
        app:layout_constraintBottom_toTopOf="@id/docInfoTv"
        app:layout_constraintEnd_toStartOf="@id/docMenuBtn"
        app:layout_constraintStart_toEndOf="@id/docImageIv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/docInfoTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:maxLines="1"
        android:textAppearance="@style/DocListItemSubtitleTextAppearence"

        app:layout_constraintBottom_toTopOf="@id/docTagsTv"
        app:layout_constraintEnd_toStartOf="@id/docMenuBtn"
        app:layout_constraintStart_toEndOf="@id/docImageIv"
        app:layout_constraintTop_toBottomOf="@id/docTitleTv" />

    <TextView
        android:id="@+id/docTagsTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="4dp"
        android:textAppearance="@style/DocListItemSubtitleTextAppearence"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/docMenuBtn"
        app:layout_constraintStart_toEndOf="@id/docTagsImg"
        app:layout_constraintTop_toBottomOf="@id/docInfoTv" />

    <ImageView
        android:id="@+id/docTagsImg"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_tag_badge"
        app:layout_constraintBottom_toBottomOf="@id/docTagsTv"
        app:layout_constraintStart_toEndOf="@id/docImageIv"
        app:layout_constraintTop_toTopOf="@id/docTagsTv" />

    <ImageButton
        android:id="@+id/docMenuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_doc_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>