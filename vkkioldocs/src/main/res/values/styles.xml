<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="VKKiolAppTheme">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="DocItemStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="DocItemImage">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="DocItemTagImage" parent="DocItemDesc">
        <item name="android:layout_width">11dp</item>
        <item name="android:layout_height">11dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:src">@drawable/ic_tag_badge</item>
    </style>

    <style name="DocItemDesc">
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="DocListItemTitleTextAppearence" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="DocListItemSubtitleTextAppearence" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#818C99</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>
